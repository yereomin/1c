	Если Параметры.Свойство("РеквизитОбъект") Тогда
		Запись.Объект 					= Параметры.РеквизитОбъект; 
		Элементы.Объект.ТолькоПросмотр 	= Истина;
	КонецЕсли;
	
	Если Параметры.Свойство("ТипЦены") Тогда
		Запись.ТипЦены					= Параметры.ТипЦены
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(Параметры.Ключ) Тогда // новый
		Запись.РегистраторЦен 	= ПараметрыСеанса.ТекущийПользователь;
	КонецЕсли;	
	
КонецПроцедуры
